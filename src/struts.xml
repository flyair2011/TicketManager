<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<package name="tmpkg" namespace="/" extends="json-default">

		<!--注册拦截器-->
		<interceptors>
			<interceptor name="businessInterceptor" class="kevin.tm.interceptor.BusinessInterceptor">
			<!--不需要拦截的方法-->
			<param name="excludeActions">login_checkLogin</param>
			<param name="excludeActions">station_testFindByName</param>
			
			</interceptor>
			<interceptor-stack name="mystack">
				<interceptor-ref name="defaultStack"/>			
				<interceptor-ref name="businessInterceptor"/>
			</interceptor-stack>
		</interceptors>

		<!-- 设置默认拦截器栈 -->
		<default-interceptor-ref name="mystack"/>

		<!-- 全局跳转页面 -->
		<global-results>
			
			<result name="noLogin">/Login.jsp</result>
			<result name="error">/error.jsp</result>
		</global-results>
		
		<!-- 全局异常 -->
		<global-exception-mappings>
			<exception-mapping result="error" exception="java.lang.Exception"/>
		</global-exception-mappings>

		<action name="login_*" class="loginAction" method="{1}">
			<result name="MESSAGE" type="json">
				<param name="root">message</param>
			</result>
			
		</action>
		
		<action name="user_*" class="userAction" method="{1}">
			<result name="MESSAGE" type="json">
				<param name="root">message</param>
			</result>
			<result name="LIST" type="json">
				<param name="root">userList</param>
			</result>
			
		</action>
		
		<action name="bus_*" class="busAction" method="{1}">
		<result name="MESSAGE" type="json">
				<param name="root">message</param>
			</result>
			<result name="MSGMAP" type="json">
				<param name="root">msgMap</param>
			</result>
			<result name="LIST" type="json">
				<param name="root">busList</param>
			</result>
			<result name="BUSBEAN" type="json">
				<param name="root"></param>
				
			</result>
			
		</action>
		
		<action name="test_*" class="testAction" method="{1}">
			<result name="MESSAGE" type="json">
			<param name="ignoreHierarchy">false</param>
			<param name="root">admin</param>
			</result>
			<result name="LIST" type="json">
			<param name="ignoreHierarchy">false</param>
				<param name="root">busList</param>
			</result>
			
		</action>
		
		
		
		
		
		<action name="main" class="kevin.ssme.action.Main">
		<result name="success">/main.jsp</result>
		</action>
		
		
		<action name="station_*" class="stationAction" method="{1}">
			<result name="MESSAGE" type="json">
				<param name="root">message</param>
			</result>
			<result name="LIST" type="json">
				<param name="root">stationList</param>
			</result>
			
		</action>
		
		<action name="route_*" class="routeAction" method="{1}">
			<result name="MESSAGE" type="json">
				<param name="root">message</param>
			</result>
			<result name="LIST" type="json">
				<param name="root">routeList</param>
			</result>
			
		</action>
	</package>
</struts>
